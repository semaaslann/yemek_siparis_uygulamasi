<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A72B23"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imageham"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/resimarkasi"
        android:scaleType="centerCrop"
        android:background="@drawable/yemekham2">

    </ImageView>

    <TextView
        android:id="@+id/txtslogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tek Tıkla Kapında"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="270dp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/white"/>




    <TextView
        android:id="@+id/txtmarka"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="SİPARİŞ KAPISI"
        android:textSize="40sp"
        android:textStyle="italic"
        android:textColor="#FEFEFE"
        android:shadowColor="@color/black"
        android:shadowDx="30"
        android:shadowDy="30"
        android:shadowRadius="10"
        android:typeface="monospace" />


    <Button
        android:id="@+id/btngirisyap"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginLeft="19dp"
        android:text="OTURUM AÇ"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/btngiris"
        android:layout_marginTop="460dp">

    </Button>

    <Button
        android:id="@+id/btnkayıtol"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginLeft="19dp"
        android:text="KAYIT OL"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#F5BC34"
        android:background="@drawable/btnkayit"
        android:layout_marginTop="540dp">

    </Button>



    <EditText
        android:id="@+id/edittxtmail"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="300dp"
        android:hint="  E posta"
        android:background="@drawable/butnsekil"
        android:drawableLeft="@drawable/baseline_mail_24"
        android:layout_marginLeft="19dp" />


    <EditText
        android:id="@+id/edittxtsifre"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:ems="10"
        android:layout_marginTop="360dp"
        android:hint="  Şifre"
        android:background="@drawable/butnsekil"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:layout_marginLeft="19dp"
        android:inputType="textPassword" />


</RelativeLayout>