<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homefrag"
    android:id="@+id/relativ1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/homeprofil">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtkAdii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/txthomeslogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hemen Siparişe Başla"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hdodenprofil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_person">

    </de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp">

        <ViewAnimator
            android:id="@+id/viewAnimator"
            android:layout_width="300dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent"
            android:background="@drawable/yemeklergecis">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/corbalarrr"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/hamburger"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/salatacesitleri"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/pizzalar"
                android:scaleType="fitXY" />

        </ViewAnimator>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Kategoriler"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@color/black">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="290dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decirclepizza"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/animpizza"
                android:onClick="animresimler"
                android:contentDescription ="Anim resmi."
                android:background="#C3BAB9">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decircleicecdek"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/animicecek"
                android:layout_weight="1"
                android:onClick="animresimler"
                android:contentDescription ="Anim resmi.">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="İçecek"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decirclesalata"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/animsalata"
                android:onClick="animresimler"
                android:contentDescription ="Anim resmi.">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Salata"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decirclecorba"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/animmcorba"
                android:layout_weight="1"
                android:background="#C3BAB9"
                android:onClick="animresimler"
                android:contentDescription ="Anim resmi.">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Çorba"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decirclehamburger"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/animhamburger"
                android:background="#C3BAB9"
                android:onClick="animresimler"
                android:contentDescription ="Anim resmi.">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Hamburger"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/animlahmacun"
                android:layout_weight="1"
                android:onClick="animresimler"
                android:contentDescription ="Anim resmi.">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/decircleanayemek"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Ana yemek"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center">

            </TextView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>