<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sepetfrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/profilbilgi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/imgdegnres"
            android:layout_width="200dp"
            android:layout_height="200dp">

        </ImageView>

        <TextView
            android:id="@+id/txtdegyemek"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text=""
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="@color/black">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btntopla"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="+"
                android:textSize="30sp"
                android:textColor="#F5BC34"
                android:background="@drawable/artieksibtn">

            </Button>

            <TextView
                android:id="@+id/txtdegfiyat"
                android:layout_width="60dp"
                android:layout_height="60dp">

            </TextView>

            <Button
                android:id="@+id/btncikar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="30sp"
                android:textColor="#F5BC34"
                android:background="@drawable/artieksibtn"
                android:text="-">

            </Button>

        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnonayla"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Sepeti Onayla"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/purple_700"
            android:background="@drawable/btngiris">

        </Button>

        <Button
            android:id="@+id/btnbosalt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Sepeti BoÅŸalt"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/purple_700"
            android:background="@drawable/btngiris">

        </Button>

    </LinearLayout>

</LinearLayout>